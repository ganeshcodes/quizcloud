extends layout

block content
  h1 Hello
  form(method="POST", id="uploadform", action="/create", enctype="multipart/form-data")
    .form-group
      label(for="file1") Upload file
      input.form-control(type="file", name="file1", id="file1")
      input(type='hidden', name='username', value='')
    .form-group
      label(for="username") Enter username
      input.form-control(type="text", name="username", id="username")
    .form-group
      label(for="year") Enter year
      input.form-control(type="text", name="year", id="year")
    .form-group
      label(for="desc") Enter description
      input.form-control(type="text", name="desc", id="desc")
    
    button.btn.btn-success(type="submit") Submit

  unless message.text == ''
    div(class=message.style, style='margin-top: 10px')
      strong= message.text

  unless fileurl == ''
    div(class='alert alert-warning', style='margin-top: 10px')
      a(href=fileurl) Download